<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la app -->
    <style name="Theme.SummaryNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales AppBar -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Colores secundarios. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Color de la status bar  -->
        <item name="android:statusBarColor">@color/dark_AppBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Colores personalizados-->
        <item name="android:textViewStyle">@color/text_color_Dark</item>
    </style>
</resources>